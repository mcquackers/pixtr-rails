<h2>Create a New Gallery</h2>

<%= form_for @gallery do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :description %>
    <%= form.text_field :description %>
  </div>

  <div>
    <input name="commit" type="submit" value="Create Gallery" />
  </div>
<% end %>

</form>
